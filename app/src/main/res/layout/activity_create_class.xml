<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.CreateClassActivity">


    <EditText
        android:id="@+id/classEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="148dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/classText"
        android:layout_width="136dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="148dp"
        android:text="class"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/subjectEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="536dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subjectText"
        android:layout_width="136dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="536dp"
        android:text="subject"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/studentText"
        android:layout_width="136dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="324dp"
        android:text="student"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teacherText"
        android:layout_width="136dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="224dp"
        android:text="teacher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/teacherSelectBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginTop="224dp"
        android:text="select"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/studentSelectBt"
        android:layout_width="95dp"
        android:layout_height="48dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="324dp"
        android:text="select"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteClassBt"
        android:layout_width="102dp"
        android:layout_height="57dp"
        android:layout_marginStart="256dp"
        android:layout_marginTop="636dp"
        android:text="delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addClassBt"
        android:layout_width="102dp"
        android:layout_height="57dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="636dp"
        android:text="add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectedStudentListText"
        android:layout_width="336dp"
        android:layout_height="121dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="392dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectedTeacher"
        android:layout_width="244dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="272dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>